\section{Estudio el Caos con Densidades}
\subsection{Transformaciones Invariante}

\begin{frame}
    \begin{dfn}[Puntos fijos] Son los puntos $x$ que cumple
        \begin{equation*}
            T(x)=x
        \end{equation*}
    \end{dfn}
    \pause
    \begin{teo} Sea $(\X,\A,\mu)$ un espacio de medida, $S:\X\cir$ una transformación no singular, y $\Pm$ el operador 
    de Perron-Frobenius asociado con $S$.
    Considere $f\in L^1$ entonces $\mu_f$ una medida dada por
    \begin{equation}
    \mu_f=\int_A{f(x)\mu(dx)}\label{c3n0}
    \end{equation}
    Es invariante si y solo si es un punto fijo de $\Pm$
    \end{teo}
\end{frame}

\subsection{Transformaciones Ergódicas}

\begin{frame}
    \begin{dfn}[Transformaciones Ergódicas] Si para cada conjunto invariante $A\in\A$ se cumple $\mu(A)=0$ o $\mu(\X\backslash\A)$
    \end{dfn}
    Si $S$ es ergódica se dice que todos los conjuntos invariantes son subconjuntos \emph{triviales} de $\X$.
    \begin{teo} Sea $(\X,\A,\mu)$ un espacio de medida y $S:\X\cir$ una transfomación no singular. S es ergodico si y solo si, para cada
    función medible $f:\X\rightarrow\R$,
    \pause
    \begin{equation}
        f(S(x))=f(x)\qquad \text{para casi todos los }x\in\X
    \end{equation}
    Implica que f es constante $\cs$
    \end{teo}
\end{frame}

\subsection{Transformaciones Mezclantes y Exactas}

\begin{frame}
    \begin{dfn}[Transformación Mezclante] Si $S$ cumple que
    \begin{equation}
    \limi_{n\rightarrow\infty}{\mu(A\cap S^{-n}(B))}=\mu(A)\mu(B)\qquad \text{para todo} A,B\in\A
    \end{equation}
    Siendo $(\X,\A,\R)$ es un espacio de medida probabilidad, y $S:\X\cir$ una transformación que preserva la medida.
    \end{dfn}
    \pause
    \begin{dfn}[Transformación Exactas] Si $S$ cumple que
    \begin{equation}
    \limi_{n\rightarrow\infty}{\mu(S^n(A))}=1 \qquad \hbox{para cada $A\in\A, \mu(A)>0$}
    \end{equation}
    Siendo $(\X,\A,\R)$ es un espacio de medida probabilidad, y $S:\X\cir$ una transformación que preserva la medida.
    \end{dfn}
\end{frame}


